  "dependencies": {
    "compressible": "^2.0.18",
    "mime-types": "^2.1.27"
  },
  "devDependencies": {
    "glob": "^7.1.6",
    "mocha": "^8.1.0",
    "nodemon": "^2.0.4",
    "sinon": "^9.1.0",
    "supertest": "^5.0.0"
  }
}
